<div class="mb-3">
  <label for="sort" class="form-label">Sortuj wg</label>
  <select name="sort" id="sort" class="form-control">
    <option value="">Domyślnie</option>
    <option value="name|asc" <%- query.sort === 'name|asc' ? 'selected' : '' %>>
      A-z
    </option>
    <option value="name|desc" <%- query.sort === 'name|desc' ? 'selected' : '' %>>
      Z-a
    </option>
    <option value="price|asc" <%- query.sort === 'price|asc' ? 'selected' : '' %>>
      Cena (rosnąco)
    </option>
    <option value="price|desc" <%- query.sort === 'price|desc' ? 'selected' : '' %>>
      Cena (malejąco)
    </option>
  </select>
</div>

<div class="mb-3">
  <label for="countmin" class="form-label">Cena (min)</label>
  <input type="number" value="<%- query.countmin %>" class="form-control" id="countmin" name="countmin">
</div>

<div class="mb-3">
  <label for="countmax" class="form-label">Cena (max)</label>
  <input type="number" value="<%- query.countmax %>" class="form-control" id="countmax" name="countmax">
</div>


<button class="btn btn-primary mt-3">Zastosuj</button>