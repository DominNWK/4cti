<form method="POST" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="" class="form-label">Nazwa produktu</label>
    <input type="text" 
      name="name" 
      value="<%= form.name %>"
      class="form-control <%- errors?.name ? 'is-invalid' : '' %>" required>
    <% if (errors?.name) { %>
      <div class="invalid-feedback"><%= errors.name.message %></div>
    <% } %>
  </div>

  <% if (showFile) { %>
    <% if (form.image) { %>
      <div class="row">
        <div class="col">
          <img src="/uploads/<%- form.image %>" class="img-fluid" alt="">
          <a href="/admin/firmy/<%- form.slug %>/usun-zdjecie" class="btn btn-sm btn-danger">Usuń</a>
        </div>
      </div>
    <% } %>

    <div class="mb-3">
      <label for="image" class="form-label">Zdjęcie</label>
      <input type="file" name="image" class="form-control" id="image">
    </div>
  <% } %>

  <div class="mb-3">
    <label for="" class="form-label">Opis</label>
    <input type="text" 
      name="des" 
      value="<%= form.des %>"
      class="form-control <%- errors?.des ? 'is-invalid' : '' %>" required>
    <div class="form-text">Przynajmniej 3 znaki</div>
    <% if (errors?.des) { %>
      <div class="invalid-feedback"><%= errors.des.message %></div>
    <% } %>
  </div>

  <div class="mb-3">
    <label for="" class="form-label">Cena</label>
    <input type="number" 
      name="price" 
      value="<%= form.price %>"
      class="form-control">
  </div>

  <button class="btn btn-primary"><%- buttonText %></button>
</form>

<% if (errors) { %>
  <div class="alert alert-danger mt-3">
    Popraw dane w formularzu
  </div>
<% } %>